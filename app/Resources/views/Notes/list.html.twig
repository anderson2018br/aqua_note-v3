{% extends 'base.html.twig' %}

{% block body %}
<h1 class="text-center">List</h1>
    <div class="search">
        <label>Search
            <input type="text" class="form-control" id="search"/>
        </label>
    </div>
<table class="table table-borderless" id="notes-table">
    <thead>
        <tr>
            <th>Genus</th>
            <th>Created By</th>
            <th>Notes</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for note in notes %}
            <tr>
                <td>{{ note.genus.name }}</td>
                <td>{{ note.user.username }}</td>
                <td><label>
                        <textarea style="color: black; background-color: #FFFFFF; border: none;" class="form-control" readonly>{{ note.note }}</textarea>
                    </label>
                </td>
                <td></td>
            </tr>
       {% endfor %}
    </tbody>
</table>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script>
        $('#notes-table').DataTable({
            info: false,
            searching: false,
            pageLength: 5,
            lengthChange: false,
            aaSorting: []
        });
    </script>
{% endblock %}
