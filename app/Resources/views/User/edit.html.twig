{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h1 class="text-center">Edit User {{ user.username }}</h1>
                {{ form_start(form) }}
                    {{ form_row(form.username) }}
                    {{ form_row(form.avatarFileName) }}
                    {{ form_row(form.roles) }}

                    <a href="{{ path('user_list') }}">back</a>
                    <button class="btn btn-success" type="submit">Save</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
