{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h1>Register</h1>
                {{ form_start(form) }}
                    {{ form_row(form.username) }}
                    {{ form_row(form.plainPassword.first,{
                        'label': 'Password'
                    }) }}
                    {{ form_row(form.plainPassword.second, {
                        'label': 'Repeat Password'
                    }) }}
                    {{ form_row(form.avatarFileName) }}

                    <a href="{{ path('homepage') }}" class="btn btn-dark">Back</a>
                    <button class="btn btn-success" type="submit">Register</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
